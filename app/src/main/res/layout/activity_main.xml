<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="#FF000000" >

    <Button
        android:layout_weight = "1"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:onClick="startGame"
        android:text="@string/button_start_game"
        android:background="@drawable/buttonstartstyle"
        android:textColor = "@drawable/startcolor"
        android:textSize = "36sp"
        android:textStyle = "bold"
        />

    <Button
        android:layout_weight = "1"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:onClick="startSettings"
        android:text="@string/button_settings"
        android:background="@drawable/buttonstartstyle"
        android:textColor = "@drawable/startcolor"
        android:textSize = "36sp"
        android:textStyle = "bold"
        />

        <Button
            android:layout_weight = "1"
            android:layout_height="0dp"
            android:layout_width="fill_parent"
            android:onClick="startHighscore"
            android:text="@string/button_highscoors"
            android:background="@drawable/buttonstartstyle"
            android:textColor = "@drawable/startcolor"
            android:textSize = "36sp"
            android:textStyle = "bold"
            />

        <Button
            android:layout_weight = "1"
            android:layout_height="0dp"
            android:layout_width="fill_parent"
            android:onClick="EndApp"
            android:text="@string/button_exit"
            android:background="@drawable/buttonstartstyle"
            android:textColor = "@drawable/startcolor"
            android:textSize = "36sp"
            android:textStyle = "bold"
            />

</LinearLayout>